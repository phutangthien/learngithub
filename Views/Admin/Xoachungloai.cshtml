@model Doancoso.Models.CHUNGLOAI

@{
    ViewBag.Title = "Xoachungloai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>XÁC NHẬN THÔNG TIN CHỦNG LOẠI CẦN XÓA</h2>

<h3>Bạn quyết định xóa chủng loại này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên chủng loại :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenCL)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-primary" /> |
            @Html.ActionLink("TRỞ VỀ", "Chungloai")
        </div>
    }
</div>
