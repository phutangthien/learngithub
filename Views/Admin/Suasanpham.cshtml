@model Doancoso.Models.SANPHAM

@{
    ViewBag.Title = "Suasanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa sản phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal"> 
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaSanPham)

        @*<div class="form-group">
            <div class="control-label col-md-3">
                <label style="color: #000; font-size: 1.2em; margin-top: -7px; font-weight: bold;">Mã sản phẩm: </label>
            </div>
            <div class="col-md-9">
                <div style="font:18px;padding: 5px 0 0 5px">@Model.MaSanPham</div>
                @Html.Hidden("Mota", @Model.Mota)
            </div>
        </div>*@

        <div class="form-group">
            <div class="control-label col-md-3">
                <label style="color: #000; font-size: 1.2em; margin-top: -7px; font-weight: bold;">Tên sản phẩm: </label>
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.TenSanPham)
                @Html.ValidationMessageFor(model => model.TenSanPham)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-3">
                <label style="color: #000; font-size: 1.2em; margin-top: -7px; font-weight: bold;">Giá bán: </label>
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Giaban)
                @Html.ValidationMessageFor(model => model.Giaban)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-3">
                <label style="color: #000; font-size: 1.2em; margin-top: -7px; font-weight: bold;">Mô tả: </label>
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Mota)
                @Html.ValidationMessageFor(model => model.Mota)
              
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-3">
                <label style="color: #000; font-size: 1.2em; margin-top: -7px; font-weight: bold;">Ảnh: </label>
            </div>
            <div class="col-md-9">
                <input type="file" name="fileupload" />
                <img src="@Url.Content("~/images/"+ Model.Anh)" width="120px" /> (Ảnh hiện tại)
                @*Thông báo trùng*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-3">
                <label style="color: #000; font-size: 1.2em; margin-top: -7px; font-weight: bold;">Ngày cập nhật: </label>
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Ngaycapnhat)
                @Html.ValidationMessageFor(model => model.Ngaycapnhat)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-3">
                <label style="color: #000; font-size: 1.2em; margin-top: -7px; font-weight: bold;">Tên chủng loại: </label>
            </div>
            <div class="col-md-9">
                @Html.DropDownList("MaCL")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về trang chủ", "Sanpham")
</div>
