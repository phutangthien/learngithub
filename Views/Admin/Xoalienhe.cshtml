@model Doancoso.Models.LIENHE

@{
    ViewBag.Title = "Xoalienhe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN LIÊN HỆ KHÁCH HÀNG CẦN XÓA</h2>

<h3>Bạn quyết định xóa liên hệ khách hàng này?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            Họ tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKH)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-primary" /> |
            @Html.ActionLink("TRỞ VỀ", "Lienhe")
        </div>
    }
</div>
