@model Doancoso.Models.SANPHAM

@{
    ViewBag.Title = "Themmoisanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM MỚI SẢN PHẨM</h2>

@using (Html.BeginForm("Themmoisanpham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
            <dl class="dl-horizontal">
                <dt>
                    Tên sản phẩm:
                </dt>

                <dd style="margin-bottom: 10px;">
                    @Html.EditorFor(model => model.TenSanPham)
                    @Html.ValidationMessageFor(model => model.TenSanPham)
                </dd>

                <dt>
                    Gía bán:
                </dt>

                <dd style="margin-bottom: 10px;">
                    @Html.EditorFor(model => model.Giaban)
                    @Html.ValidationMessageFor(model => model.Giaban)
                </dd>

                <dt>
                    Mô tả:
                </dt>

                <dd style="margin-bottom: 10px;">
                    <textarea name="Mota">Mô tả thông tin sản phẩm</textarea>
                </dd>

                <dt>
                    Ảnh:
                </dt>

                <dd style="margin-bottom: 10px;">
                    <input type="file" name="fileupload" style="color:#000" />
                    @ViewBag.Thongbao
                </dd>

                <dt>
                    Ngày cập nhật:
                </dt>

                <dd style="margin-bottom: 10px;">
                    <input type="date" name="Ngaycapnhat" />
                    @Html.ValidationMessageFor(model => model.Ngaycapnhat)
                </dd>

                <dt>
                    Tên chủng loại:
                </dt>

                <dd style="margin-bottom: 10px;">
                    @Html.DropDownList("MaCL")
                </dd>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9">
                        <input type="submit" value="Thêm Mới" class="btn btn-primary" />
                    </div>
                </div>
            </dl>
        </div> 
}



<div>
    @Html.ActionLink("VỀ TRỞ VỀ TRANG ADMIN", "Sanpham")
</div>

