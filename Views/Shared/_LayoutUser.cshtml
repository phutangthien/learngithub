                        @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
                        {
                            <div class="search">
                                @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "search",@Type = "search" ,@placeholder = "Nhập từ khoá cần tìm ..." })</div>
                            <div class="sear-sub">
                                <input type="submit" value="">
                            </div>
                        }
