<body>
    <div class="header">
        <div class="container">
            <ul>
                <li><span class="glyphicon glyphicon-time" aria-hidden="true"></span>Giao hàng miễn phí</li>
                <li><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Miễn phí đặt đơn hàng</li>
                <li><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span><a href="mailto:info@smartshop.com">info@smartshop.com</a></li>
            </ul>
        </div>
    </div>
    <div class="header-bot">
        <div class="container">
            <div class="col-md-3 header-left">
                <h1><a href="@Url.Action("Index", "TTrangStore")"><img src="~/images/logo3.jpg"></a></h1>
            </div>
            <div class="col-md-6 header-middle">
                
