                                <li class=" menu__item"><a class="menu__link" href="@Url.Action("Lienhe", "LienHe")">Liên hệ</a></li>
                                
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="top_nav_right">
                <div class="cart box_1">
                   @Html.Action("GioHangPartial", "GioHang")
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div>
        @RenderBody()
