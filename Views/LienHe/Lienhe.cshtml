@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="contact">
    <div class="container">
        <div class="contact-grids">
            <div class="col-md-4 contact-grid text-center animated wow slideInLeft" data-wow-delay=".5s">
                <div class="contact-grid1">
                    <i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i>
                    <h4>Địa Chỉ</h4>
                    <p>331 QL1A, An Phú Đông, Q12  <span>TP.Hồ Chí Minh.</span></p>
                </div>
            </div>
            <div class="col-md-4 contact-grid text-center animated wow slideInUp" data-wow-delay=".5s">
                <div class="contact-grid2">
                    <i class="glyphicon glyphicon-earphone" aria-hidden="true"></i>
                    <h4>Liên Lạc</h4>
                    <p> (08)8888 8888<span>09888 88888</span></p>
                </div>
            </div>
            <div class="col-md-4 contact-grid text-center animated wow slideInRight" data-wow-delay=".5s">
                <div class="contact-grid3">
                    <i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>
                    <h4>Email</h4>
                    <p><a href="mailto:admin@smartshop.com"> admin@smartshop.com </a><span><a href="mailto:supportcustomer@smartshop.com"> supportcustomer@smartshop.com</a></span></p>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="map wow fadeInDown animated" data-wow-delay=".5s">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.362506101149!2d106.69297131613105!3d10.860008446132454!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317529c17978287d%3A0xec48f5a17b7d5741!2zxJBIIE5ndXnDqsyDbiBUw6LMgXQgVGhhzIBuaA!5e0!3m2!1svi!2s!4v1492101258298" frameborder="0" style="border:0"></iframe>
        </div>
            <div class="contact-form2">
                @using (Html.BeginForm())
                {
                     @Html.ValidationSummary(true)
                     @Html.TextBox("text", "Tên khách hàng")
                     @ViewData["Loi1"]                   
                     @Html.TextBox("email","Email")
                     @ViewData["Loi2"]
                     @Html.TextArea("texta", "Nội dung")
                     @ViewData["Loi3"]
                     <input type="submit" value="Gửi" />
                }
            </div>
    </div>
</div>
